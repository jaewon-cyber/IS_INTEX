    <script>
        
        const ctx = document.getElementById('impactChart');
        
        
        const erPink = '#FFD8D1';
        const erBlue = '#99B7C6';

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Graduation Rate', 'Job Placement', 'Artistic Confidence'],
                datasets: [{
                    label: 'Success Metrics (%)',
                    data: [85, 72, 94],
                    backgroundColor: [
                        'rgba(255, 216, 209, 0.8)', // Pink with opacity
                        'rgba(153, 183, 198, 0.8)', // Blue with opacity
                        'rgba(255, 216, 209, 0.8)'  // Pink again
                    ],
                    borderColor: [
                        erPink,
                        erBlue,
                        erPink
                    ],
                    borderWidth: 2,
                    borderRadius: 5, 
                    borderSkipped: false
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false 
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 100,
                        grid: {
                            color: '#f0f0f0'
                        }
                    },
                    x: {
                         grid: {
                            display: false 
                        }
                    }
                }
            }
        });
    </script>

