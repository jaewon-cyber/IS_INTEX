<%- include('partials/header') %>

<header class="custom-bg-pink py-5 text-center mb-4">
    <div class="container">
        <h1 class="display-5 fw-bold text-dark">Survey Results</h1>
        <p class="lead text-secondary">Feedback from post-event surveys.</p>
    </div>
</header>

<main class="container mb-5 flex-grow-1">

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-3" style="width: 50%;">Question</th>
                        <th class="p-3">Response</th>
                        <th class="p-3">Survey ID</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (surveys.length > 0) { %>
                        <% surveys.forEach(s => { %>
                        <tr>
                            <td class="p-3"><%= s.Question %></td>
                            <td class="p-3 fw-bold text-primary"><%= s.Response %></td>
                            <td class="p-3 text-muted">#<%= s.ParticipantSurveyId %></td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="3" class="text-center p-4">No survey data available.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('partials/footer') %>