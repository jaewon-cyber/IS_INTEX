<!-- 
Can only access if logged in 2
Users are displayed and navigation works including search 1
Ability to maintain user account (edit, delete, add) - manager only -->

<%- include('partials/header') %>

<header class="custom-bg-pink py-5 text-center mb-4">
    <div class="container">
        <h1 class="display-5 fw-bold text-dark">User Maintenance</h1>
        <p class="lead text-secondary">Manage system administrators and staff.</p>
    </div>
</header>

<main class="container mb-5 flex-grow-1">

    <div class="row mb-4 align-items-center">
        <div class="col-md-6">
            <form action="/users" method="GET" class="d-flex">
                <input type="text" name="search" class="form-control me-2 rounded-pill" placeholder="Search users..." value="<%= typeof search != 'undefined' ? search : '' %>">
                <button type="submit" class="btn btn-outline-primary rounded-pill">Search</button>
            </form>
        </div>
        <div class="col-md-6 text-md-end mt-3 mt-md-0">
            <a href="/createUser" class="btn btn-custom-pink rounded-pill px-4 fw-bold">
                <i class="bi bi-person-plus-fill me-1"></i> Create New User
            </a>
        </div>
    </div>

    <div class="card shadow border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="p-3">Email (ID)</th>
                        <th class="p-3">Role</th>
                        <th class="p-3">Name</th>
                        <th class="p-3 text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users.length > 0) { %>
                        <% users.forEach(u => { %>
                        <tr>
                            <td class="p-3 fw-bold"><%= u.ParticipantEmail %></td>
                            <td class="p-3">
                                <% if(u.ParticipantRole === 'admin') { %>
                                    <span class="badge bg-danger">Admin</span>
                                <% } else if(u.ParticipantRole === 'manager') { %>
                                    <span class="badge bg-primary">Manager</span>
                                <% } else { %>
                                    <span class="badge bg-secondary">User</span>
                                <% } %>
                            </td>
                            <td class="p-3"><%= u.ParticipantFirstName %> <%= u.ParticipantLastName %></td>
                            <td class="p-3 text-end">
                                <form action="/users/delete/<%= u.ParticipantId %>" method="POST" onsubmit="return confirm('Delete user <%= u.ParticipantEmail %>?');" style="display:inline;">
                                    <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i> Remove</button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="4" class="text-center p-4">No users found.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<%- include('partials/footer') %>